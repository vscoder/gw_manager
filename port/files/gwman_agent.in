#!/bin/sh
#
# PROVIDE: gwman_agent
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf.local or /etc/rc.conf
# to enable this service:
#
# gwman_agent_enable  (bool):  Set to NO by default.
#               Set it to YES to enable gwman_agent.
#

. /etc/rc.subr

name="gwman_agent"
rcvar=${name}_enable
command="/usr/local/bin/gwman_agent"

load_rc_config $name

: ${gwman_agent_enable="NO"}
: ${gwman_agent_config="/usr/local/etc/gwman/agent.conf"}
: ${gwman_agent_pidfile="/var/run/gwman_agent.pid"}

pidfile="${gwman_agent_pidfile}"

start_cmd="${command} start"
stop_cmd="${command} stop"
restart_cmd="${command} restart"

run_rc_command $1
